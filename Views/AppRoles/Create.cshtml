@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutOwner.cshtml";
}
<form asp-controller="AppRoles" asp-action="Create" method="post">
    <div class="row">
        <div class=" col-md-4">
            <form method="post">
                <h2>Create Role</h2>
                <hr />
                <div asp-asp-validation-summary="ModeOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Name" class="form-control" aria-required="true" />
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="test-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</form>