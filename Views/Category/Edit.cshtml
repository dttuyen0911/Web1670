@using Web1670.Models

@model Category
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<form asp-controller="Category" asp-action="Edit" method="post">
    <div class="text-center mb-4">
        <h2 class="section-title px-5" 1<span class="px-2">Update Category</span></h2>
    </div>
    <div class="card">
        <div class="card-body">
            <form>
                <div>
                    Name: <input type="text" asp-for="cateName" /><span asp-validation-for="cateName"></span>
                </div>
                </br>
                <div>
                    Description: <input type="text" asp-for="cateDescription" /><span asp-validation-for="cateDescription"></span>
                </div>
                </br>
                <div>
                    Address: <input type="text" asp-for="cateAddress" /><span asp-validation-for="cateAddress"></span>
                </div>
                </br>
                <div>
                    Telephone: <input type="text" asp-for="cateTelephone" /><span asp-validation-for="cateTelephone"></span>
                </div>
                </br>
                <input type="submit" value="Submit" />
                <a asp-action="Index"> Back to list</a>
            </form>
        </div>
    </div>
</form>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}