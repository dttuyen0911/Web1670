<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Book</span></h2>
    </div>
    <div class="row px-xl-5 pb-3">
         @foreach (var book in Model)
                {
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="card product-item border-0 mb-4">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/13.webp" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Name: @book.bookName</h5>
                        <p class="card-text">Description: @book.bookDescription</p>
                        <p class="card-text">Price: @book.bookPrice</p>
                    </div>
                <div class="card-footer d-flex justify-content-between bg-light border">
                    <a asp-controller = "Book" asp-action="AddToCart" asp-route-id="@book.bookID " class="btn btn-primary btn-sm float-right">Add To Cart</a>
                    <a asp-controller = "Book" asp-action="DetailBook" asp-route-id="@book.bookID " class="btn btn-warning btn-sm float-right">View Detail</a>
                </div>
            </div>

        </div>
        }
    </div>
</div>