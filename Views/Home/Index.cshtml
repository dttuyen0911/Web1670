@using Web1670.Models
@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-12 col-md-12">
            <div class="row pb-3">
                @foreach (var book in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                        <div class="card product-item border-0 mb-4">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                <img src="~/uploads/@book.urlImage" style="width: 300px; height: 200px" />
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="card-title">Name: @book.bookName</h6>
                                <div class="d-flex justify-content-center">
                                    <p class="card-text">Price: @book.bookPrice</p>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.bookID" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Add To Cart</a>
                                <a asp-controller="Book" asp-action="DetailBook" asp-route-id="@book.bookID" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>View Detail</a>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-12 pb-1">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mb-3">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>