@using Web1670.Models

@model Publisher
<form asp-controller="Publisher" asp-action="Create" method="post">
    <h1>Create Publisher</h1>
    <div class="card">
        <div class="card-body">
            <form>
                <div>
                    Name: <input type="text" asp-for="pubName" /><span asp-validation-for="pubName"></span>
                </div>
                </br>
                <div>
                    Description: <input type="text" asp-for="pubDescription" /><span asp-validation-for="pubDescription"></span>
                </div>
                </br>
                <div>
                    Address: <input type="text" asp-for="pubAddress" /><span asp-validation-for="pubAddress"></span>
                </div>
                </br>
                <div>
                    Telephone: <input type="text" asp-for="pubTelephone" /><span asp-validation-for="pubTelephone"></span>
                </div>
                </br>
            </form>
        </div>
    </div>
    <input type="submit" value="Submit" />
    <a asp-action="Index"> Back to list</a>
</form>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}