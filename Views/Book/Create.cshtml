@model Web1670.Models.Book

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form asp-controller="Book" asp-action="Create" method="post">
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-12 col-xl-12">
                <div class="bg-light rounded h-100 p-4">
                    <h6 class="mb-4">Create book</h6>
                    <form>
                        <div class="mb-3">
                            Name: <input type="text" asp-for="bookName" /><span asp-validation-for="bookName"></span>
                        </div>
                        <div class="mb-3">
                            Description:<input type="text" asp-for="bookDescription" />
                        </div>
                        <div class="mb-3">
                            Datetime:<input type="date" asp-for="bookDate" /><span asp-validation-for="bookDate"></span>
                        </div>
                        <div class="mb-3">
                            Quantity:<input type="text" asp-for="bookQuantity" />
                        </div>
                        <div class="mb-3">
                            Price:<input type="text" asp-for="bookPrice" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Publisher" class="control-label"></label>
                            <select asp-for="pubID" asp-items="ViewBag.pubID" class="form-control">
                                <option>Select Publisher</option>
                            </select>
                        </div>
                        <input type="submit" value="Submit" />
                        <a asp-action="Index"> Back to list</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>
